{
    "name": "Micro Videos Admin",
  
    // Docker Compose ou Dockerfile (escolha uma das opções)
    "dockerComposeFile": [
      "docker-compose.yml"
    ],
  
    // Serviço que o VS Code deve usar como container principal
    "service": "app",
  
    // Pasta que o VS Code deve abrir
    "workspaceFolder": "/home/node/app",
  
    // Recursos adicionais como Zsh, utilitários comuns, etc.
    "features": {
      "ghcr.io/devcontainers/features/common-utils:2": {
        "installZsh": true,
        "installOhMyZsh": true,
        "installOhMyZshConfig": true,
        "upgradePackages": true
      }
    },
  
    // Extensões do VS Code que serão instaladas automaticamente no container
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode"
        ]
      }
    },
  
    // Comando pós-criação do container (opcional)
    "postCreateCommand": "npm install",
  
    // Porta que será exposta do container para o host
    "forwardPorts": [3000]
  }